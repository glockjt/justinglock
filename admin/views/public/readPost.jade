extends publicLayout
block body
    .wrapper
        include header
        article.article-post
            div.featured-image(style="background-image: url( " + post.meta.featureImage + ");")
                div.overlay
                div.featured-image__credit
                    p= post.meta.featureImageCredit
                header.post-header
                    div.container.post-container
                        h1.featured-header= post.meta.title
                        div.article-meta
                            //- time.article-meta__time(datetime={{ post.meta.date }})
                        p.lead= post.meta.description
                        p.tags
                            i.fa.fa-tag= post.meta.tags
            div.share(share-button)
            div.container.post-content!= post.content
            div.container.post-content
                div#disqus_thread
                    script.
                        /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
                        var disqus_shortname = 'justinglock'; // required: replace example with your forum shortname

                        /* * * DON'T EDIT BELOW THIS LINE * * */
                        (function() {
                            var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
                            dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
                            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
                        })();
                a.dsq-brlink(href='http://disqus.com') comments powvered by
                    span.logo-disqus Disqus
    include footer-invert
    //- footer.invert
    //-     p.credits-invert &copy;2014 Justin Glock
    script.
        $('.sticky-nav').waypoint('sticky');
        new Share('.share', {
            url: 'www.justinglock.com',
            title: 'JustinGlock.com',
            text: "Check out Justin Glock's, new article...",
            ui: {
                button_background: '#de5e60',
                button_color: '#fff'
            },
            networks: {
                twitter: {
                    url: window.location.href,
                    text: "Check out this article..."
                }
            }
            });
